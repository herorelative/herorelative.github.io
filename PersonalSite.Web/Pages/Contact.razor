@page "/contact"

<PageTitle>Zar Ni Myo - Contact Me</PageTitle>

<HeadContent>
    <meta name="Contact" content="Send me a message through this contact form.">
</HeadContent>

<SinglePageTitle Title="Contact me" Description="Send me a message through this contact form." />

<div class="flex w-full min-h-300 justify-center items-center">
    <div class="w-800">
    <div class="relative z-10 rounded-xl shadow-lg p-8">
        <form action="https://formspree.io/f/xpzeedoz"
              method="POST" 
              class="flex flex-col space-y-4">
              <div>
                <label class="text-sm" for="">Your email</label>
                <input required type="email" name="email" placeholder="Your email" class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300" />
              </div>
            <div>
                <label class="text-sm" for="">Your message</label>
                <textarea required type="text" name="message" rows="4" placeholder="Your message" class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300"></textarea>
            </div>
            @*<label>
                Your message:
                <textarea name="message"></textarea>
            </label>*@
            <!-- your other form fields go here -->
            <button type="submit" class="inline-block self-end rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Send</button>
        </form>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
