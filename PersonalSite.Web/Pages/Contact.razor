@page "/contact"

<PageTitle>Zar Ni Myo - Contact Me</PageTitle>

<HeadContent>
    <meta name="Contact" content="Send me a message through this contact form.">
</HeadContent>

<SinglePageTitle Title="Contact Me" Description="Whether you're reaching out with particular questions, got a project in mind, or want to cooperate on something, I'm all ears – use the following form and I'll get back to you as soon as I can." />

<div class="flex w-full min-h-300 justify-center items-center">
    <div class="w-800 py-4 sm:py-24 lg:py-12">
    <div class="relative z-10 rounded-xl shadow-lg p-8">
        <form action="https://formspree.io/f/xpzeedoz"
              method="POST" 
              class="flex flex-col space-y-4">
            <div>
                <label class="text-sm" for="name">Your name</label>
                <input required type="text" name="name" id="name" placeholder="First name and last name" class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300" />
            </div>
            <div>
                <label class="text-sm" for="email">Your email</label>
                <input required type="email" name="email" id="email" placeholder="youremail@domain.com" class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300" />
            </div>
            <div>
                <label class="text-sm" for="message">Your message</label>
                <textarea required type="text" name="message" id="message" rows="4" placeholder="What is it all about?" class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300"></textarea>
            </div>
                <button type="submit" class="inline-block self-end rounded-md border border-indigo-600 bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-opacity-75">Send</button>
        </form>
        </div>
    </div>
</div>

