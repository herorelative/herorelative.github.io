@code {
    private string? greeting = "";

    protected override void OnInitialized()
    {
        var currentTime = DateTime.Now;

        DateTime morningStart = DateTime.Today.AddHours(6);
        DateTime afternoonStart = DateTime.Today.AddHours(12);
        DateTime eveningStart = DateTime.Today.AddHours(18);

        if (currentTime >= morningStart && currentTime < afternoonStart)
        {
            greeting = "Good morning!";
        }
        else if (currentTime >= afternoonStart && currentTime < eveningStart)
        {
            greeting = "Good afternoon!";
        }
        else if (currentTime >= eveningStart)
        {
            greeting = "Good evening!";
        }
        else
        {
            greeting = "";
        }

        base.OnInitialized();
    }
}